<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jumpList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0.0dip"
    android:layout_marginBottom="0.0dip"
    android:layout_marginLeft="0.0dip"
    android:layout_marginRight="0.0dip"
    android:layout_marginStart="0.0dip"
    android:layout_marginTop="0.0dip"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="@dimen/zero_dpi"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/chart_static"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="top"
        android:orientation="horizontal"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/chart_details"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sixty_dpi"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/chart_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/fifteen_sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/chart_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_sp" />

            <TextView
                android:id="@+id/chart_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/MaxGChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MaxGChart_text"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_sp" />

            <TextView
                android:id="@+id/chart_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen_sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>